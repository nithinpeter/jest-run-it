{
  "name": "jestRunIt",
  "description": "Run/debug Jest tests right from your editor",
  "publisher": "vespa-dev-works",
  "displayName": "Jest Run It",
  "version": "0.3.3",
  "license": "MIT",
  "categories": [
    "Other",
    "Debuggers"
  ],
  "repository": {
    "url": "https://github.com/nithinpeter/jest-run-it",
    "type": "git"
  },
  "keywords": [
    "jest",
    "test",
    "test runner",
    "unit tests"
  ],
  "galleryBanner": {
    "theme": "dark",
    "color": "#000000"
  },
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.40.2"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Jest Run It",
        "properties": {
          "jestRunIt.jestConfigPath": {
            "type": "string",
            "default": "",
            "description": "Jest config file path relative to the current workspace (e.g: ./jest.config.js)",
            "scope": "window"
          },
          "jestRunIt.jestPath": {
            "type": "string",
            "default": "",
            "description": "Absolute path to the Jest binary (default: node_modules/.bin/jest)",
            "scope": "window"
          },
          "jestRunIt.runTestLabel": {
            "type": "string",
            "default": "üèÉ‚Äç‚ôÇÔ∏è",
            "description": "Label for the run test action",
            "scope": "window"
          },
          "jestRunIt.debugTestLabel": {
            "type": "string",
            "default": "üêû",
            "description": "Label for the debug test action",
            "scope": "window"
          },
          "jestRunIt.updateSnapshotsLabel": {
            "type": "string",
            "default": "üëç",
            "description": "Label for the update snapshots action",
            "scope": "window"
          },
          "jestRunIt.customSnapshotMatchers": {
            "type": "array",
            "default": [],
            "description": "Custom snapshot matchers",
            "scope": "window"
          },
          "jestRunIt.testMatchPatterns": {
            "type": "array",
            "default": [
              "**/*.{spec,test}.{js,ts,jsx,tsx}",
              "**/__test__/*.{js,ts,jsx,tsx}"
            ],
            "description": "Glob patterns to match test files",
            "scope": "window"
          },
          "jestRunIt.jestCLIOptions": {
            "type": "array",
            "default": [],
            "items": {
              "type": "string",
              "description": "CLI Option e.g. --coverage"
            },
            "description": "Add CLI Options to the Jest Command e.g. https://jestjs.io/docs/en/cli",
		      },
          "jestRunIt.argumentQuotesToUse": {
			      "type": "string",
			      "enum": ["none", "auto", "single", "double"],
            "default": "auto",
            "description": "Quotes to use when preparing arguments for jest",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "jestRunItCodeLens.debugTest",
        "title": "Debug test"
      },
      {
        "command": "jestRunItCodeLens.runTest",
        "title": "Run test"
      },
      {
        "command": "jestRunItCodeLens.updateSnapshots",
        "title": "Update snapshots"
      },
      {
        "command": "jestRunItTestsExplorer.debugTest",
        "title": "Debug test",
        "icon": {
          "light": "resources/icons/debug/light.svg",
          "dark": "resources/icons/debug/dark.svg"
        }
      },
      {
        "command": "jestRunItTestsExplorer.runTest",
        "title": "Run test",
        "icon": {
          "light": "resources/icons/run/light.svg",
          "dark": "resources/icons/run/dark.svg"
        }
      },
      {
        "command": "jestRunItTestsEditor.runTest",
        "title": "Run test",
        "icon": {
          "light": "resources/icons/run/light.svg",
          "dark": "resources/icons/run/dark.svg"
        }
      },
      {
        "command": "jestRunItTestsEditor.debugTest",
        "title": "Debug test",
        "icon": {
          "light": "resources/icons/debug/light.svg",
          "dark": "resources/icons/debug/dark.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jestRunIt",
          "title": "Jest Run It",
          "icon": "resources/jest-logo.png"
        }
      ]
    },
    "views": {
      "jestRunIt": [
        {
          "id": "jestRunItTestsExplorer",
          "name": "Explorer",
          "when": "jestRunItActive"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "jestRunItTestsExplorer.runTest",
          "when": "view == jestRunItTestsExplorer",
          "group": "inline"
        },
        {
          "command": "jestRunItTestsExplorer.debugTest",
          "when": "view == jestRunItTestsExplorer",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "command": "jestRunItTestsEditor.runTest",
          "when": "jestRunItActive",
          "group": "navigation"
        },
        {
          "command": "jestRunItTestsEditor.debugTest",
          "when": "jestRunItActive",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/micromatch": "^4.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.2",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "jest-editor-support": "^27.1.1",
    "micromatch": "^4.0.2"
  }
}
